modules = ["web", "python-3.12"]

[nix]
channel = "stable-24_05"
packages = ["geckodriver", "gitFull", "glibcLocales", "playwright-driver", "xcodebuild", "zlib"]

[workflows]
runButton = "Автообновляемый веб-сервер"

[[workflows.workflow]]
name = "Запуск парсера"
author = 18583526
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src && python3 main.py"

[[workflows.workflow]]
name = "Веб-сервер"
author = 18583526
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"

[[workflows.workflow]]
name = "Автообновляемый веб-сервер"
author = 18583526
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 web_server.py"

[[ports]]
localPort = 5000
externalPort = 80
